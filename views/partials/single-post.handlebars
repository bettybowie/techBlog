<div>
  <section class="card">
    <div>
      <div class="card-header">
        <header>{{post.title}}</header>
        <p>Posted by {{user.username}} on {{format_date post.posted_on}}</p>
      </div>
      <div class="card-body">
        <p>{{post.content}}</p>
      </div>
    </div>
  </section>

  {{#if post.Comments}}
  <section class="card">
      <div>
        <div class="card-header">
          <header>Comments</header>
        </div>
        <div class="card-body">
          {{#each post.Comments}}
          <p>{{content}}</p>
          <p>{{User.username}}, posted on: {{format_date posted_on}}</p>
          {{/each}}
        </div>
      </div>
  </section>
  {{/if}}

  <section class="card">
    <form class="form comment-form">
      <div class="form-group card-header">
        <header>Add New Comment</header>
      </div>
      <div class="card-body form-group">
        <label for="add-comment">Comment:</label>
        <textarea name="comment-content" class="form-input" id="new-comment" data-id="{{comment.id}}"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
  </section>

</div>
