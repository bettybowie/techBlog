<div class="row justify-space-between-md">
  <div class="newPost-card">
    <h2 class="page-title">Edit Post</h2>
    <form class="form newPost-form">
      <div class="form-group">
        <label for="new-post-title">Title:</label>
        <input class="form-input" type="text" id="edit-post-title" required="true" value="{{post.title}}"/>
      </div>
      <div class="form-group">
        <label for="new-post-content">Content:</label>
        <textarea class="form-input" type="text" id="edit-post-content" required="true" value="{{post.content}}">{{post.content}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" data-id="{{post.id}}">Submit</button>
        <button class="btn btn-primary" type="reset">Cancel</button>
      </div>
    </form>
  </div>
</div>